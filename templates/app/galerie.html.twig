{% extends 'base.html.twig' %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/galerie.css') }}">
{% endblock %}

{% block body %}

    <section class="hero"></section>

    <a class="button-style" href="/">Retourner Ã  la home page</a>

    <div class="galerie-container">
        {% for galerie in galeries|slice(0, 9) %}
            <div class="galerie-item">
                <a href="{{ path('app_image', {'id':galerie.id}) }}">
                <div class="image-container">
                    <img src="{{ asset('uploads/galerie/' ~ galerie.imageUrl) }}" alt="{{ galerie.titre }}" />
                </div>
                <div class="galerie-description">
                    <p>{{ galerie.description }}</p>
                </div>
            </div>
        {% endfor %}
    </div>

    <style>
        .hero {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #2f2d2d;
            opacity: 0.5;
            z-index: -1;
        }

    </style>

{% endblock %}

