        }
        .t2800{
            font-family: 'inter', sans-serif;
            text-align: center;
            font-size: 2.6em;
            font-weight: bold;
            color: white;
            margin-top: 10%;
            margin-left: 30%;
        }
        .t125{
            font-family: '\"Roboto Mono\"', sans-serif;
            text-align: left;
            font-size: 2.1em;
            font-weight: bold;
            color: #61accf;
            margin-top: 10%;
            margin-left: 20%;
            width: 30%;
        }
        .richesse{
            font-family: '\"Roboto Mono\"', sans-serif;
            text-align: left;
            font-size: 2em;
            font-weight: bold;
            color: white   ;
