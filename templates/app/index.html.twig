{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap');


        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Roboto', sans-serif;
        }
        body{
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }
        .VCenpiste{
            height: 100vh;
        }
        .docVC{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 40%;

        }
        .DiscCard{
            display: flex;
            flex-direction: row;
            justify-content: center;
            gap: 20px;
            height: 60%;

        }
        .titleVCP{
            font-family: 'Roboto', sans-serif;
            text-align: center;
            font-size: 2em;
            font-weight: bold;
            color: #1e354e;
        }
        .contentVCP{
            font-family: 'inter', sans-serif;
            text-align: center;
            font-size: 1em;
            font-weight: bold;
            color: #1e354e;
            width: 45%;
        }
        .imgleft{
            display: flex;
            justify-content: center;
            align-items: flex-end;
            border-radius: 5px;
            height: 80%;
            width: 20%;
            background-image: url("https://www.neige-et-soleil.com/wp-content/uploads/2020/08/paysages-lac-du-mont-cenis-1-credit-photo-alicia-magnenot-1-1300x975.jpg");
            background-size: cover;
        }
        .imgmid{
            display: flex;
            justify-content: center;
            align-items: flex-end;
            border-radius: 5px;
            height: 80%;
            width: 20%;
            background-image: url("https://dynamic-media-cdn.tripadvisor.com/media/photo-o/0a/6c/51/e4/les-alpages-de-val-cenis.jpg?w=700&h=-1&s=1");
            background-size: cover;
        }
        .imgright{
            display: flex;
            justify-content: center;
            align-items: flex-end;
            border-radius: 5px;
            height: 80%;
            width: 20%;
            background-image: url("https://valcenisvanoise.fr/wp-content/uploads/2022/01/itineraire-des-villages-de-valcenis-800x600.jpg");
            background-size: cover;
        }
        .under_text{
            color: white;
            font-family: 'inter', sans-serif;
            text-align: center;
            font-size: 1.1em;
            font-weight: normal;
        }


        .headerHomePage {
            position: fixed;
            width: 100%;
            margin: 20px;
            display: flex;
            gap: 50px;
        }

        .navWrapper {
            width: 100%;
            padding-right: 50px;
            background-color: transparent;
            transition: background-color 0.3s ease;
        }

        .navWrapper.scrolled {
            background-color: rgba(131, 143, 143, 0.58);
        }

        .line {
            width: 100%;
            height: 1px;
            background-color: #fff;
            margin: 20px 0;
        }
        .navHome {
            display: flex;
            justify-content: flex-end;
            width: 100%;
            margin: 20px 0;
            padding-right: 50px;
            gap:40px;
        }
        .navHome a {
            color: #fff;
            text-decoration: none;
            font-size: 20px;
            font-weight: 600;
            text-transform: uppercase;
        }
        .navHome a:hover {
            text-decoration: underline;
        }
        .hero {
            background-image: url("https://static.savoie-mont-blanc.com/wp-content/uploads/external/8373992597499853dc5b241cd17d4a0d-14020941-1745x1163.jpg");
            background-size: cover;
            background-position: center;
            height: 100vh;
            padding-top: 250px;
            padding-left: 20px;
            padding-right: 20px;
            display: flex;
        }
        .heroLeft, .heroRight, .heroCenter {
            width: 33%;
            display: flex;
            flex-direction: column;

        }
        .heroLeftImgWrapper {
            width: 120px;
            height: 120px;
            display: flex;
            justify-content: center;
            align-items: center;
            background: rgba(153, 153, 153, 0.26);
            border-right: 2px solid #FFFFFF;
            transform: translateX(-20px);
            cursor: pointer;
        }
        .heroLeftImgWrapper img {
            width: 70px;
            height: 70px;
            object-fit: cover;
        }
        .heroLeftLine {
            margin-top: 70px;
            width: 2px;
            height: 150px;
            background-color: #fff;
        }
        .heroCenter h1 {
            font-weight: 800;
            font-size: 70px;
            text-align: center;
            color: #fff;
            max-width: 610px;
        }
        .heroRight {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 15px;
            margin-top: 190px;
        }
        .heroRightTop {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        .heroRightTop div {
            height: 15px;
            width: 2px;
            background: #fff;

            border-radius: 5px;
        }
        .heroRightTop div:nth-child(1) {
            height: 100px;
            width: 2px;
            background: #FF0000;
            border-radius: 5px;
        }
        .heroRightBottom {
            display: flex;
            flex-direction: column;
            gap: 15px;
            transform: translateX(5px);
        }

        .burgerRemontes {
            position: fixed;
            top: 0;
            left: 0;
            width: 33%;
            height: 100vh;
            background-color: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(10px);
            z-index: 999;
            color: #fff;
            overflow-y: scroll;
            display: none;
        }
        .burgerRemontes.active {
            display: block;
        }
        .closeBurger {
            position: absolute;
            top: 20px;
            right: 20px;
            cursor: pointer;
        }
        .remontesList {
            display: flex;
            flex-direction: column;
            gap: 20px;
            padding: 20px;
            margin-top: 40px;
        }
        .remonteeWrapper {

            display: flex;
            justify-content: space-between;
            gap: 20px;
        }
        .remonteeListLeft, .remonteeListRight {
            display: flex;
            gap: 10px;
        }


    </style>

    <div class="burgerRemontes">
        <div class="closeBurger">
            <img src="{{ asset('img/closeBtn.png') }}" alt="close">
        </div>
        <div class="remontesList">
                {% for remontee in remontees %}
                    <div class="remonteeWrapper">
                        <div class="remonteeListLeft">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M4.2 3.5c0-.8.7-1.6 1.6-1.6c.9 0 1.6.7 1.6 1.6S6.6 5 5.8 5s-1.6-.7-1.6-1.5m17.8.4l-.5-.9l-8 4.1l.5.9l8-4.1m-1.2 16.4l.9.9c-.6.6-1.2 1-1.9 1.3s-1.5.5-2.3.5H2v-1.3h2.7l2.1-3.5L4.5 15l-.8-7.8c0-.9.8-1.7 1.7-1.7c.3 0 .6.1.8.2l3.5 2.6l2.3-.8l.8 1.6l-3.5 1.5c-.1-.1-1.6-1.2-2.7-2.1L7 12l5.3 4.5l1.7 5.2h3.5c.6 0 1.2-.1 1.8-.4c.6-.2 1.1-.6 1.5-1M7 21.7h5l-1.6-3.9l-2.3-1.9l1.2 2.5L7 21.7Z"/></svg>
                            <p>{{ remontee.name }}</p>
                            <p>{{ remontee.type }}</p>
                        </div>
                        <div class="remonteeListRight">
                            <p>{{ remontee.horaire }}</p>
                            {% if remontee.open == 1 %}
                                <div class="colorcheck"></div>
                            {% else %}
                                <div class="colorchecked"></div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
        </div>
    </div>

