{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            font-family: 'Roboto', sans-serif;
        }

        body {
            background-image: url("https://www.haute-maurienne-vanoise.com/content/uploads/sites/5/2022/12/valcenis_canopee.jpg");
            background-size: cover;
            background-repeat: no-repeat;
        }

        h2 {
            color: white;
        }

        .containers {
            width: 100%;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .logo {
            position: absolute;
            top: 30px;
            left: 30px;
        }

        .container-form {
            position: relative;
            width: 466px;
            height: 700px;
            flex-direction: column;
            display: flex;
            justify-content: center;
            gap: 50px;
            align-items: center;
            background: rgba(46, 75, 106, 0.92);
            box-shadow: -7px 12px 8px -2px rgba(0, 0, 0, 0.44);
            backdrop-filter: blur(5px);
            border-radius: 30px;
        }
        .container-form .desc {
            top: 30px;
            position: absolute;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            gap: 20px;
        }

        form {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            gap: 12px;
            margin-top: 140px;
        }
        form hr {
            color: white;
            width: 100%;
            margin-bottom: 45px;
        }
        form .form-group {
            width: 100%;
        }
        form .form-group input {
            width: 269px;
            height: 47px;
            border-radius: 40px;
            padding: 20px;
            border: none;
        }
        form label {
            display: none;
        }
        form button {
            width: 269px;
            height: 47px;
            border-radius: 40px;
            border: none;
            text-align: center;
        }
        form button:hover {
            background: #61ACCF;
            color: white;
        }

        a{
            color: white;
            text-decoration: none;
        }
    </style>

